<adonisControls:AdonisWindow x:Class="ZenTimings.Windows.OptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZenTimings.Windows"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        adonisExtensions:CursorSpotlightExtension.RelativeSpotlightSize="0"
        mc:Ignorable="d"
        Title="Options" Height="199.195" Width="303.822" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Icon="/ZenTimings;component/Resources/icon-16.png" SizeToContent="WidthAndHeight" ShowInTaskbar="False">

    <Border Padding="10">
        <StackPanel Height="auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="124"/>
                    <ColumnDefinition Width="78"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--CheckBox Grid.Column="0" Grid.Row="0" Content="Compact Mode" Padding="5" VerticalAlignment="Center" x:Name="checkBoxCompactMode" Click="CheckBoxCompactMode_CheckedChanged"/-->
                <ToggleButton x:Name="checkBoxCompactMode"
                              Click="CheckBoxCompactMode_CheckedChanged"
                              Grid.Column="0"
                              Grid.Row="1"
                              Margin="0 5 5 5"
                              Style="{DynamicResource {x:Static adonisUi:Styles.ToggleSwitch}}"
                              Content="Compact Mode"/>
                <CheckBox Grid.Column="0" Grid.Row="0" Content="Auto Refresh" Padding="5" VerticalAlignment="Center" x:Name="checkBoxAutoRefresh" Click="CheckBoxAutoRefresh_Click"/>
                <TextBox Grid.Column="1" Grid.Row="0" Text="2000" Margin="5" x:Name="numericUpDownRefreshInterval" />
                <TextBlock Grid.Column="2" Grid.Row="0" Text="ms" VerticalAlignment="Center" Padding="5 0"/>
                <!--TextBlock Grid.Column="0" Grid.Row="2" Text="Theme" Padding="5" VerticalAlignment="Center" /-->
                <!--ComboBox Grid.Column="1" Grid.Row="2" Margin="5" x:Name="comboBoxTheme" SelectionChanged="ComboBoxTheme_SelectionChanged" /-->
                <ToggleButton x:Name="comboBoxTheme" Grid.Column="0" Grid.Row="2" Margin="0 5 5 5" Click="ComboBoxTheme_SelectionChanged" Style="{DynamicResource {x:Static adonisUi:Styles.ToggleSwitch}}"
                              Content="Dark Mode"/>
            </Grid>

            <Separator Margin="0 20 0 0"/>

            <Grid Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="buttonSettingsApply" Grid.Column="1" 
                        Content="Apply" 
                        Margin="{adonisUi:Space 0, 0, 1, 0}" 
                        Style="{DynamicResource {x:Static adonisUi:Styles.AccentButton}}"
                        Width="70" Click="ButtonSettingsApply_Click"/>
                <Button x:Name="buttonSettingsCancel" Grid.Column="2" 
                        Content="Close" 
                        IsCancel="True"
                        Width="70" />
            </Grid>
        </StackPanel>
    </Border>
</adonisControls:AdonisWindow>
